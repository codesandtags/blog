---
import { SITE, AUTHOR, SOCIAL_LINKS } from '@/consts';
import { Home, FolderOpen, Tag, Archive, Info, Twitter, Github, Menu, X } from 'lucide-astro';
// import { Search } from 'lucide-astro'; // Temporarily disabled

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home', Icon: Home },
  { href: '/categories/', label: 'Categories', Icon: FolderOpen },
  { href: '/tags/', label: 'Tags', Icon: Tag },
  { href: '/archives/', label: 'Archives', Icon: Archive },
  { href: '/about/', label: 'About', Icon: Info },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<aside class="sidebar">
  <div class="sidebar-content">
    <!-- Mobile Header: Avatar + Title on left, Hamburger on right -->
    <div class="mobile-header">
      <div class="mobile-header-left">
        <div class="avatar-container">
          <a href="/" class="avatar-link">
            <img
              src={AUTHOR.avatar}
              alt={AUTHOR.fullName}
              class="avatar"
            />
          </a>
        </div>
        <div class="site-info">
          <h1 class="site-title">
            <a href="/">{SITE.title}</a>
          </h1>
        </div>
      </div>
      <!-- Hamburger Menu Button (Mobile only) -->
      <button
        id="mobile-menu-toggle"
        class="mobile-menu-toggle"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-nav-menu"
      >
        <Menu id="menu-icon" class="menu-icon" size={24} />
        <X id="close-icon" class="close-icon" size={24} />
      </button>
    </div>

    <!-- Desktop: Title and Tagline (centered) -->
    <div class="desktop-site-info">
      <h1 class="site-title">
        <a href="/">{SITE.title}</a>
      </h1>
      <p class="site-tagline">{SITE.tagline}</p>
    </div>

    <!-- Desktop: Avatar (centered) -->
    <div class="desktop-avatar-container">
      <a href="/" class="avatar-link">
        <img
          src={AUTHOR.avatar}
          alt={AUTHOR.fullName}
          class="avatar"
        />
      </a>
    </div>

    <!-- Navigation Links (Desktop: always visible, Mobile: in dropdown) -->
    <nav class="main-nav" id="mobile-nav-menu" aria-label="Main navigation">
      <ul class="nav-list">
        {navItems.map((item) => {
          const { Icon } = item;
          return (
            <li class="nav-item">
              <a
                href={item.href}
                class={`nav-link ${isActive(item.href) ? 'active' : ''}`}
              >
                <Icon class="nav-icon" size={18} />
                <span class="nav-label">{item.label}</span>
              </a>
            </li>
          );
        })}
      </ul>
    </nav>

    <!-- Search Button - Temporarily hidden -->
    <!--
    <button
      id="search-trigger"
      class="search-button"
      aria-label="Open search (Cmd+K or Ctrl+K)"
      title="Search (Cmd+K or Ctrl+K)"
    >
      <Search class="search-icon" size={18} />
      <span class="search-label">Search</span>
      <kbd class="search-shortcut">
        <span class="sr-only">Press </span>
        <span class="kbd-key">âŒ˜</span>K
      </kbd>
    </button>
    -->

    <!-- Social Links (Desktop) -->
    <nav class="social-links" aria-label="Social links">
      {SOCIAL_LINKS.map((link) => {
        const platform = link.includes('twitter') ? 'Twitter' :
                        link.includes('github') ? 'GitHub' :
                        'Social';
        const IconComponent = link.includes('twitter') ? Twitter :
                             link.includes('github') ? Github :
                             null;
        return (
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label={`${platform} profile`}
            title={platform}
          >
            {IconComponent && <IconComponent class="social-icon" size={20} />}
          </a>
        );
      })}
    </nav>
  </div>
</aside>

<!-- Social Links (Mobile - Fixed at bottom) -->
<nav class="social-links-mobile" aria-label="Social links">
  {SOCIAL_LINKS.map((link) => {
    const platform = link.includes('twitter') ? 'Twitter' :
                    link.includes('github') ? 'GitHub' :
                    'Social';
    const IconComponent = link.includes('twitter') ? Twitter :
                         link.includes('github') ? Github :
                         null;
    return (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label={`${platform} profile`}
        title={platform}
      >
        {IconComponent && <IconComponent class="social-icon" size={20} />}
      </a>
    );
  })}
</nav>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background-color: var(--color-bg-alt);
    border-right: 1px solid var(--color-border);
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    overflow-y: auto;
    z-index: 100;
  }

  .sidebar-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Mobile Header Layout - Hidden on desktop */
  .mobile-header {
    display: none;
  }

  /* Desktop Layout */
  .desktop-avatar-container {
    text-align: center;
  }

  .desktop-site-info {
    text-align: center;
  }

  .avatar-container {
    text-align: center;
  }

  /* Ensure desktop site-info and avatar are visible */
  .desktop-site-info .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .desktop-site-info .site-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .desktop-site-info .site-title a:hover {
    color: var(--color-link);
    text-decoration: none;
  }

  .desktop-site-info .site-tagline {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-style: italic;
    line-height: 1.4;
  }

  .avatar-link {
    display: inline-block;
    transition: transform 0.2s;
  }

  .avatar-link:hover {
    transform: scale(1.05);
  }

  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-border);
    transition: border-color 0.2s;
  }

  .avatar-link:hover .avatar {
    border-color: var(--color-link);
  }

  .site-info {
    text-align: center;
  }

  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .site-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .site-title a:hover {
    color: var(--color-link);
    text-decoration: none;
  }

  .site-tagline {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-style: italic;
    line-height: 1.4;
  }

  .main-nav {
    margin-top: 0.5rem;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    color: var(--color-text);
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s;
    font-size: 0.95rem;
  }

  .nav-link:hover {
    background-color: var(--color-bg);
    color: var(--color-link);
    text-decoration: none;
  }

  .nav-link.active {
    /* Improved contrast: use darker shade (#e55a2b) for better WCAG AA compliance with white text */
    background-color: #e55a2b;
    color: var(--color-text-on-accent);
    font-weight: 500;
  }

  .nav-link.active:hover {
    /* Slightly lighter on hover but still maintaining good contrast */
    background-color: #f05d2e;
  }

  .nav-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    stroke-width: 2;
  }

  .nav-label {
    flex: 1;
  }

  .search-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    width: 100%;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.2s;
    font-size: 0.95rem;
    cursor: pointer;
    margin-top: 0.5rem;
  }

  .search-button:hover {
    background-color: var(--color-bg-alt);
    border-color: var(--color-link);
    color: var(--color-link);
  }

  .search-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    stroke-width: 2;
  }

  .search-label {
    flex: 1;
    text-align: left;
  }

  .search-shortcut {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    font-size: 0.75rem;
    font-family: var(--font-mono);
    color: var(--color-text-muted);
  }

  .kbd-key {
    font-size: 0.7rem;
  }

  .social-links {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 0.75rem;
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    transition: all 0.2s;
    text-decoration: none;
    position: relative;
  }

  .social-link:hover {
    background-color: var(--color-link);
    border-color: var(--color-link);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .social-icon {
    width: 20px;
    height: 20px;
    stroke-width: 2;
  }

  @media (max-width: 1024px) {
    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
      padding: 0.75rem 1rem;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
      overflow-y: visible;
      z-index: auto;
    }

    .sidebar-content {
      gap: 0;
    }

    /* Hide desktop elements on mobile */
    .desktop-avatar-container,
    .desktop-site-info {
      display: none;
    }

    /* Show mobile header */
    .mobile-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      margin-bottom: 0.75rem;
      gap: 1rem;
    }

    .mobile-header-left {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      flex: 1;
      min-width: 0;
    }

    .mobile-header .avatar-container {
      margin-bottom: 0;
      flex-shrink: 0;
    }

    .mobile-header .avatar {
      width: 45px;
      height: 45px;
      border-width: 2px;
    }

    .mobile-header .site-info {
      margin-bottom: 0;
      text-align: left;
      min-width: 0;
      flex: 1;
    }

    .mobile-header .site-title {
      font-size: 1rem;
      margin-bottom: 0;
      line-height: 1.2;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .mobile-header .site-title a {
      display: block;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    /* Hamburger Menu Button */
    .mobile-menu-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 44px;
      height: 44px;
      min-width: 44px;
      min-height: 44px;
      background-color: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 6px;
      color: var(--color-text);
      cursor: pointer;
      transition: all 0.2s;
      position: relative;
      flex-shrink: 0;
    }

    .mobile-menu-toggle:hover {
      background-color: var(--color-bg-alt);
      border-color: var(--color-link);
      color: var(--color-link);
    }

    .mobile-menu-toggle[aria-expanded="true"] {
      background-color: var(--color-link);
      border-color: var(--color-link);
      color: var(--color-text-on-accent);
    }

    .menu-icon,
    .close-icon {
      position: absolute;
      transition: opacity 0.2s, transform 0.2s;
    }

    .close-icon {
      opacity: 0;
      transform: rotate(-90deg);
    }

    .mobile-menu-toggle[aria-expanded="true"] .menu-icon {
      opacity: 0;
      transform: rotate(90deg);
    }

    .mobile-menu-toggle[aria-expanded="true"] .close-icon {
      opacity: 1;
      transform: rotate(0deg);
    }

    /* Mobile Navigation Menu */
    .main-nav {
      margin-top: 0;
      margin-bottom: 0;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out, opacity 0.2s ease-out;
      opacity: 0;
    }

    .main-nav.mobile-menu-open {
      max-height: 500px;
      opacity: 1;
      margin-top: 0.75rem;
      padding-top: 0.75rem;
      border-top: 1px solid var(--color-border);
    }

    .nav-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .nav-item {
      margin: 0;
    }

    .nav-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1rem;
      font-size: 0.95rem;
      min-height: 44px;
      width: 100%;
      border-radius: 6px;
      transition: all 0.2s;
    }

    .nav-icon {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }

    .search-button {
      padding: 0.5rem 0.65rem;
      font-size: 0.8rem;
      min-height: 44px;
    }

    .search-shortcut {
      display: none;
    }

    /* Hide social links in header on mobile - they'll be shown at bottom */
    .social-links {
      display: none;
    }
  }

  /* Mobile-only: Social links at bottom of viewport */
  @media (max-width: 1024px) {
    .social-links-mobile {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      background-color: var(--color-bg-alt);
      border-top: 1px solid var(--color-border);
      z-index: 50;
      box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
    }

    .social-links-mobile .social-link {
      width: 40px;
      height: 40px;
      min-width: 40px;
      min-height: 40px;
      background-color: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      text-decoration: none;
    }

    .social-links-mobile .social-link:hover {
      background-color: var(--color-link);
      border-color: var(--color-link);
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .social-links-mobile .social-icon {
      width: 20px;
      height: 20px;
      stroke-width: 2;
    }
  }

  @media (max-width: 640px) {
    .sidebar {
      padding: 0.625rem 0.75rem;
    }

    .mobile-header {
      margin-bottom: 0.5rem;
    }

    .mobile-header-left {
      gap: 0.625rem;
    }

    .mobile-header .avatar {
      width: 40px;
      height: 40px;
    }

    .mobile-header .site-title {
      font-size: 0.9rem;
    }

    .mobile-menu-toggle {
      width: 40px;
      height: 40px;
      min-width: 40px;
      min-height: 40px;
    }

    .main-nav.mobile-menu-open {
      margin-top: 0.5rem;
      padding-top: 0.5rem;
    }

    .nav-link {
      padding: 0.75rem 0.875rem;
      font-size: 0.9rem;
    }

    .nav-icon {
      width: 18px;
      height: 18px;
    }

    .social-links-mobile {
      padding: 0.625rem 0.75rem;
      gap: 0.625rem;
    }

    .social-links-mobile .social-link {
      width: 36px;
      height: 36px;
      min-width: 36px;
      min-height: 36px;
    }

    .social-links-mobile .social-icon {
      width: 18px;
      height: 18px;
    }
  }
</style>

<script>
  // Mobile Menu Toggle
  (function () {
    const menuToggle = document.getElementById('mobile-menu-toggle');
    const mobileNav = document.getElementById('mobile-nav-menu');

    if (!menuToggle || !mobileNav) return;

    menuToggle.addEventListener('click', () => {
      const isOpen = menuToggle.getAttribute('aria-expanded') === 'true';

      // Toggle aria-expanded
      menuToggle.setAttribute('aria-expanded', !isOpen);

      // Toggle menu visibility
      if (isOpen) {
        mobileNav.classList.remove('mobile-menu-open');
      } else {
        mobileNav.classList.add('mobile-menu-open');
      }
    });

    // Close menu when clicking on a nav link (mobile only)
    const navLinks = mobileNav.querySelectorAll('.nav-link');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 1024) {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.classList.remove('mobile-menu-open');
        }
      });
    });

    // Close menu when clicking outside (mobile only)
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 1024) {
        const isClickInside = mobileNav.contains(e.target) || menuToggle.contains(e.target);
        if (!isClickInside && mobileNav.classList.contains('mobile-menu-open')) {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.classList.remove('mobile-menu-open');
        }
      }
    });

    // Close menu on window resize if switching to desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth > 1024) {
        menuToggle.setAttribute('aria-expanded', 'false');
        mobileNav.classList.remove('mobile-menu-open');
      }
    });
  })();

  // Connect search button to modal (if enabled)
  (function () {
    const searchTrigger = document.getElementById('search-trigger');
    if (!searchTrigger) return;

    searchTrigger.addEventListener('click', () => {
      const event = new CustomEvent('openSearch');
      window.dispatchEvent(event);
    });
  })();
</script>

